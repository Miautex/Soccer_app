<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#6E7168</item>
        <item name="colorPrimaryDark">#6E7168</item>
        <item name="colorAccent">#6E7168</item>
    </style>

    <style name="Theme.App.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#4F575B</item>
        <item name="colorPrimaryDark">#4F575B</item>
        <item name="colorAccent">#4F575B</item>
        <item name="colorControlNormal">@color/standardRed</item>
        <item name="colorControlActivated">@color/standardRed</item>
        <item name="colorControlHighlight">@color/standardRed</item>
        <item name="android:button">@style/buttonStyle</item>
        <item name="android:tabStripEnabled">false</item>
    </style>

    <style name="buttonStyle">
        <item name="android:background">@drawable/buttonshape</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.App.Base">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.App.Base.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.App.Base.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.App.Base.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ShowQRCode" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowFixedWidthMajor">90%</item>
        <item name="windowFixedWidthMinor">90%</item>
    </style>

    <style name="dlgConfirmDeleteStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:background">@drawable/background</item>
        <item name="android:textStyle">bold</item>
        <item name="android:buttonBarStyle">@drawable/buttonshape</item>
    </style>

</resources>
